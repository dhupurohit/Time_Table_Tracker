<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B1D8B7"
    tools:context=".View_Day">


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="1"
        android:columnCount="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardmon"
                android:onClick="admin"
                android:layout_width="350dp"
                android:layout_height="90dp"
                app:cardCornerRadius="35dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/secondary">


                <TextView
                    android:id="@+id/txtmon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textColor="@color/third"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_gravity="center" />

            </android.support.v7.widget.CardView>




        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardtue"
                android:onClick="admin"
                android:layout_width="350dp"
                android:layout_height="90dp"
                app:cardCornerRadius="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/secondary">

                <TextView
                    android:id="@+id/txttue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:textColor="@color/third"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_gravity="center" />



            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardwed"
                android:onClick="admin"
                android:layout_width="350dp"
                android:layout_height="90dp"
                app:cardCornerRadius="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/secondary">


                <TextView
                    android:id="@+id/txtwed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textColor="@color/third"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_gravity="center" />


            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardthr"
                android:onClick="admin"
                android:layout_width="350dp"
                android:layout_height="90dp"
                app:cardCornerRadius="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/secondary">


                <TextView
                    android:id="@+id/txtthr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thersday"
                    android:textColor="@color/third"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_gravity="center" />




            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardfri"
                android:onClick="admin"
                android:layout_width="350dp"
                android:layout_height="90dp"
                app:cardCornerRadius="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/secondary">

                <TextView
                    android:id="@+id/txtfri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:textColor="@color/third"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_gravity="center" />



            </android.support.v7.widget.CardView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cardsat"
                android:onClick="admin"
                android:layout_width="350dp"
                android:layout_height="90dp"
                app:cardCornerRadius="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/secondary">

                <TextView
                    android:id="@+id/txtsat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textColor="@color/third"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:layout_gravity="center" />


            </android.support.v7.widget.CardView>


        </LinearLayout>


    </GridLayout>



</android.support.v7.widget.LinearLayoutCompat>