<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1D8B7"
    tools:context=".Admin">




   <GridLayout
       android:id="@+id/grid"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:rowCount="2"
       android:columnCount="2">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <android.support.v7.widget.CardView
             android:id="@+id/cardstaff"
             android:onClick="admin"
             android:layout_width="180dp"
             android:layout_height="190dp"
             app:cardCornerRadius="35dp"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="0dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="15dp"
             android:layout_gravity="center_horizontal"
             android:backgroundTint="@color/secondary">

            <ImageView
                android:id="@+id/img_staff"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/staff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="Staff"
                android:textColor="@color/third"
                android:layout_marginTop="60dp"
                android:textSize="30dp"
                android:textStyle="bold" />



         </android.support.v7.widget.CardView>


      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <android.support.v7.widget.CardView
             android:id="@+id/cardlec"
             android:layout_width="180dp"
             android:layout_height="190dp"
             app:cardCornerRadius="35dp"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="0dp"
             android:layout_marginRight="4dp"
             android:layout_gravity="center_horizontal"
             android:backgroundTint="@color/secondary">

            <ImageView
                android:id="@+id/img_lec"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/lecture" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="Lectures"
                android:textColor="@color/third"
                android:layout_marginTop="60dp"
                android:textSize="30dp"
                android:textStyle="bold" />

         </android.support.v7.widget.CardView>


      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <android.support.v7.widget.CardView
             android:id="@+id/cardstud"
             android:layout_width="180dp"
             android:layout_height="190dp"
             app:cardCornerRadius="35dp"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="0dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="15dp"
             android:layout_gravity="center_horizontal"
             android:backgroundTint="@color/secondary">


            <ImageView
                android:id="@+id/img_std"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/student" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="Students"
                android:textColor="@color/third"
                android:layout_marginTop="60dp"
                android:textSize="30dp"
                android:textStyle="bold" />

         </android.support.v7.widget.CardView>


      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <android.support.v7.widget.CardView
             android:id="@+id/cardcource"
             android:layout_width="180dp"
             android:layout_height="190dp"
             app:cardCornerRadius="35dp"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="0dp"
             android:layout_marginRight="4dp"
             android:layout_gravity="center_horizontal"
             android:backgroundTint="@color/secondary">

            <ImageView
                android:id="@+id/img_cource"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/curce" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="Cources"
                android:textColor="@color/third"
                android:layout_marginTop="60dp"
                android:textSize="30dp"
                android:textStyle="bold" />


         </android.support.v7.widget.CardView>



      </LinearLayout>


      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <android.support.v7.widget.CardView
             android:id="@+id/cardabout"
             android:layout_width="180dp"
             android:layout_height="190dp"
             app:cardCornerRadius="35dp"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="0dp"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="15dp"
             android:layout_gravity="center_horizontal"
             android:backgroundTint="@color/secondary">

            <ImageView
                android:id="@+id/img_sub"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/information" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="About Us"
                android:textColor="@color/third"
                android:layout_marginTop="60dp"
                android:textSize="30dp"
                android:textStyle="bold" />

         </android.support.v7.widget.CardView>



      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

         <android.support.v7.widget.CardView
             android:id="@+id/cardlogout"
             android:layout_width="180dp"
             android:layout_height="190dp"
             app:cardCornerRadius="35dp"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="10dp"
             android:layout_marginLeft="0dp"
             android:layout_marginRight="4dp"
             android:layout_gravity="center_horizontal"
             android:backgroundTint="@color/secondary">

            <ImageView
                android:id="@+id/about"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/log_out" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center"
                android:text="Log Out"
                android:textColor="@color/third"
                android:layout_marginTop="60dp"
                android:textSize="30dp"
                android:textStyle="bold" />

         </android.support.v7.widget.CardView>


      </LinearLayout>




   </GridLayout>











</android.support.v7.widget.LinearLayoutCompat>