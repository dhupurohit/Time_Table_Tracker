<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B1D8B7"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".day">


    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/custom_tbl"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="33sp"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/third"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="TIME"/>


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/third"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="33sp"
            android:padding="16dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:text="SUBJECT"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/custom_tbl"
        android:layout_width="match_parent"
        android:layout_height="60dp">



        <TextView
            android:id="@+id/txt1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8:30 - 9:25"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="24sp" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/third"/>

        <TextView
            android:id="@+id/sub1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="sub 1"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/custom_tbl"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txt2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="9:25 - 10:20"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/third"/>

        <TextView
            android:id="@+id/sub2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="sub 2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/custom_tbl"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txt3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="10:20 - 11:15"/>


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/third"/>

        <TextView
            android:id="@+id/sub3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="sub 3"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/custom_tbl"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <TextView
            android:id="@+id/txtbreak"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="break"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/third"/>


        <TextView
            android:id="@+id/free"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="break"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/custom_tbl"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txt4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="11:40 - 12:35"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/third"/>


        <TextView
            android:id="@+id/sub4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:text="sub 4"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@drawable/custom_tbl"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txt5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="24sp"
            android:text="12:35 - 1:30"/>

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@color/third"/>

        <TextView
            android:id="@+id/sub5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center_vertical"
            android:textAlignment="center"
            android:textColor="@color/third"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="sub 5"/>
    </LinearLayout>



</android.support.v7.widget.LinearLayoutCompat>